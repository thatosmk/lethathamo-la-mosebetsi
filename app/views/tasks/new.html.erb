<%= content_tag(:div, class: 'main-layout') do%>
  <%= form_with(model: [@board, @board.tasks.build], url: board_tasks_path(@board), local: true, data: { turbo: :false }) do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name, placeholder: 'name', required: true %>

    <%= f.submit t('app.submit') %>
  <% end %>
<% end %>
